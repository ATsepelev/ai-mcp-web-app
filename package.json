{
  "name": "@chatrium/widget",
  "version": "3.0.3",
  "type": "module",
  "description": "Chatrium Widget - A modern chat widget with voice input and MCP integration for AI assistants",
  "keywords": [
    "chatrium",
    "chat",
    "widget",
    "ai",
    "chat-widget",
    "voice-input",
    "speech-to-text",
    "mcp",
    "model-communication-protocol",
    "mcp-resources",
    "mcp-tools",
    "openai",
    "react",
    "chatbot",
    "ai-chat",
    "conversational-ai",
    "assistant",
    "automation",
    "tools",
    "resources",
    "context"
  ],
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "browser": "./dist/index.umd.js"
    },
    "./styles": {
      "import": "./dist/chat-widget.css",
      "require": "./dist/chat-widget.css",
      "browser": "./dist/chat-widget.css"
    },
    "./styles-map": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "browser": "./dist/index.umd.js"
    }
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "author": "Aleksey Tsepelev",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c rollup.config.cjs",
    "pack:dry": "npm pack --dry-run",
    "prepublishOnly": "npm run build && npm run pack:dry",
    "yalc:publish": "npm run build && yalc publish",
    "yalc:push": "npm run build && yalc push"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "optionalDependencies": {
    "js-tiktoken": "^1.0.15"
  },
  "devDependencies": {
    "@babel/core": "7.28.3",
    "@babel/preset-env": "7.28.3",
    "@babel/preset-react": "7.27.1",
    "@rollup/plugin-babel": "6.0.4",
    "@rollup/plugin-commonjs": "25.0.8",
    "@rollup/plugin-node-resolve": "15.3.1",
    "@rollup/plugin-replace": "6.0.2",
    "@rollup/plugin-terser": "0.4.4",
    "postcss": "8.5.6",
    "rollup": "3.29.5",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-postcss": "4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chatrium/widget.git"
  },
  "bugs": {
    "url": "https://github.com/chatrium/widget/issues"
  },
  "homepage": "https://github.com/chatrium/widget#readme"
}
